{{#button-group value=imageSize onchange=(action (mut imageSize)) as |b|}}
  {{#b.option 'small' class='icon'}}{{icon 'small'}}{{/b.option}}
  {{#b.option 'large' class='icon'}}{{icon 'large'}}{{/b.option}}
  {{#b.option 'full-bleed' class='icon'}}{{icon 'full-bleed'}}{{/b.option}}
{{/button-group}}
{{#button-group value=inset onchange=(action (mut inset)) as |b|}}
  {{#b.option 'left' class='icon'}}{{icon 'inset-left'}}{{/b.option}}
  {{#b.option 'none' class='icon'}}{{icon 'inset-none'}}{{/b.option}}
  {{#b.option 'right' class='icon'}}{{icon 'inset-right'}}{{/b.option}}
{{/button-group}}
<label for='upload-field'>Upload field</label>
{{check-box value=multiple onchange=(action (mut multiple))}}
{{#upload-field name='photo' multiple=multiple value=upload accept='image/*' onchange=(action 'upload' 'upload') as |photo remove|}}
  <img src={{photo.url}} alt={{photo.name}} />
  <button type='reset' onclick={{remove}}>{{icon 'trash'}}</button>
{{else}}
  Add File
{{/upload-field}}

{{#link-to (query-params as='list') class='button'}}{{icon 'list'}} List{{/link-to}}
{{#link-to (query-params as='calendar') class='button'}}{{icon 'calendar'}} Calendar{{/link-to}}

{{#sortable-list id='countries' rows=countries sort=sort as |l|}}
  {{#l.item 'name' as |item|}}
    {{item.name}}
  {{else}}
    Country
  {{/l.item}}
  {{#l.item 'code' as |item|}}
    {{item.alpha2Code}}
  {{else}}
    Code
  {{/l.item}}
  {{#l.item 'capital' as |item|}}
    {{item.capital}}
  {{else}}
    Capital
  {{/l.item}}
{{/sortable-list}}

{{#form-for class='grid-column' as |f|}}
  {{#f.nav ondelete=(action 'query')}}
    <button type='submit'>{{icon 'emoji'}} Hi There</button>
  {{/f.nav}}
  {{f.text 'text' label='{{text-field}}'}}
  {{f.editor 'editor' label='{{text-editor}}'}}
  {{#f.select 'select' label='{{single-select}}' options=(list 'Apple' 'Banana' 'Yuzu') gravity='s' as |item|}}
    {{icon 'check'}} {{item}}
  {{/f.select}}
  {{f.textarea 'multiline' label='{{text-area}}' rows=3}}
  {{f.number 'number' label='{{number-field}}'}}
  {{f.percent 'percent' label='{{percent-field}}'}}
  {{f.currency 'currency' label='{{currency-field}}'}}
  {{f.autocomplete 'autocomplete' key='name' onquery=(action 'query') label='{{auto-complete}}'}}
  {{#f.password 'password' label='{{password-field}}'}}
    Reveal Password
  {{else}}
    Hide Password
  {{/f.password}}
{{/form-for}}

<label>
  {{check-box value=hasIcon onchange=(action (mut hasIcon))}}
  Has search icon
</label>

<label for='search-field'>Search</label>
{{search-field hasIcon=hasIcon inputId='search-field' query=query onquery=(action (mut query))}}
{{query}}

<label for='url-field'>URL</label>
{{url-field inputId='url-field' value=url onchange=(action (mut url))}}
{{url}}

<label for='auto-complete'>Autocomplete</label>
{{auto-complete inputId='auto-complete' value=autocomplete onchange=(action (mut autocomplete)) onquery=(action 'query') key='name'}}
{{autocomplete.alpha2Code}} / {{autocomplete.name}}

<label for='date-field'>Date Field</label>
{{date-field inputId='date-field' value=date onchange=(action (mut date))}}
{{date}}

<label for='datetime-field'>Datetime Field</label>
{{datetime-field inputId='datetime-field' value=datetime onchange=(action (mut datetime))}}
{{datetime}}

{{#copy-field value='Hello'}}
  Copy
{{else}}
  Copied
{{/copy-field}}

<label for='check-box'>Checkbox</label>
{{check-box value=checked onchange=(action (mut checked))}}
{{checked}}



<div class='row'>
  {{#submit-button onsubmit=(action 'flash' 'Submitted!')}}
    Show snackbar
  {{/submit-button}}

  {{#submit-button onsubmit=(action 'open' (component 'hello-dialog' thing=(action 'open')))}}
    Show dialog
  {{/submit-button}}

  {{#confirm-button onsubmit=(action 'flash' 'Submitted with confirmation')}}
    {{icon 'eye'}} Show snackbar
  {{else}}
    Are you sure?
  {{/confirm-button}}

  {{#animated-beacon group='hello'}}
    <button type='submit' onclick={{action (mut dialog) true}}>Show dialog</button>
  {{/animated-beacon}}
  <button type='reset'>Cancel</button>
  {{#if dialog}}
    {{dialog-box (component 'hello-dialog')
      group='hello'
      ondismiss=(action (mut dialog) false)}}
  {{/if}}
</div>

{{snack-bar}}
{{dialog-box}}
{{outlet}}
