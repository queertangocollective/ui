{{#file-dropzone name=name}}
  {{#if files}}
    <div class='files'>
      <ul>
        {{#each files as |file idx|}}
          <li>
            {{#if file.isLoading}}
              {{icon 'ellipsis' class='bounce'}}
            {{else if file}}
              {{yield file (action 'change' idx null)}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  {{#if (or multiple (equals files.length 0))}}
    {{#file-upload tabindex=-1 class='submit-button' name=name accept=accept multiple=multiple onfileadd=(action 'add')}}
      {{icon 'add'}} {{yield to='inverse'}}
    {{/file-upload}}
  {{/if}}
{{/file-dropzone}}
