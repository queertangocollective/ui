<input type={{type}}
       id={{inputId}}
       name={{name}}
       placeholder={{placeholder}}
       readonly={{if readonly 'readonly'}}
       autocomplete="off"
       onkeydown={{action 'keydown'}}
       onfocus={{action 'focus'}}
       onblur={{action 'blur'}}
       onpaste={{action 'reformat'}}
       onchange={{action 'reformat'}}
       oninput={{action 'reformat'}}
       disabled={{disabled}}>