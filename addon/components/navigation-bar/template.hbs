{{#if (media '(max-width: 620px)')}}
  <button type='submit' id='nav-{{elementId}}' class='icon'>
    {{icon 'list'}}
  </button>
  {{#pop-over gravity='nw' cover=true for=(concat 'nav-' elementId) on='click' ondidinsert=(action (mut popover))}}
    <nav class="column">
      {{yield}}
    </nav>
  {{/pop-over}}
{{else}}
  <nav class="row">
    {{yield}}
  </nav>
{{/if}}
