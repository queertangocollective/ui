{{#animated-container class='filters'}}
  {{#animated-if isFiltering duration=200}}
    <div class='container'>
      {{yield to='inverse'}}
    </div>
  {{/animated-if}}
{{/animated-container}}
{{#if (media '(max-width: 500px)')}}
  {{#if sortings.length}}
    <header class="mobile {{if (has-block 'inverse') "has-filters"}} {{if isFiltering 'and-filtering'}}">
      <div class='buttons'>
        {{#select-field options=sortings value=currentSort onchange=(action 'sortMobile') as |option|}}
          {{t (concat name '.' option.name)}}
        {{/select-field}}
        {{#if onsort}}
          <a href='#' tabindex=-1 onclick={{action 'sort' (get this.currentSort this.inverse)}}
            class="{{this.direction}} active submit-button icon">
            <span class='sort'>{{icon 'chevron'}}</span>
          </a>
        {{else}}
          {{~#link-to (query-params sort=(get this.currentSort this.inverse))
            class=(concat this.direction ' active submit-button icon')}}
            <span class='sort'>{{icon 'chevron'}}</span>
          {{~/link-to~}}
        {{/if}}
        {{#if (has-block 'inverse')}}
          <button class='filter' type='submit' onclick={{action (mut isFiltering) (not isFiltering)}}>
            {{icon 'settings'}}
          </button>
        {{/if}}
      </div>
    </header>
  {{/if}}
{{else}}
  <header class={{if isFiltering 'and-filtering'}}>
    <div class='item'>
      {{yield (hash item=(component 'sortable-list/list-item' sort=sort onsort=(if onsort (action 'sort')) list=this listName=name tagName=''))}}
    </div>
    {{#if (has-block 'inverse')}}
      <button id="{{elementId}}-filter" class='filter' type='submit' onclick={{action (mut isFiltering) (not isFiltering)}}>
        {{icon 'settings'}}
      </button>
    {{/if}}
  </header>
{{/if}}
{{#tool-tip for=(concat elementId "-filter")}}
  Filter Results
{{/tool-tip}}
{{#animated-container}}
  {{#animated-if rows.length use=fade duration=duration}}
    {{#animated-container tagName='ol'}}
      {{#animated-each rows use=shuffle duration=duration as |row|}}
        <li>
          <div class='item {{if (media '(max-width: 500px)') 'mobile'}}'>
            {{~yield (hash item=(component 'sortable-list/list-item' item=row list=this listName=name tagName='')) row~}}
          </div>
        </li>
      {{/animated-each}}
    {{/animated-container}}
  {{else}}
    <div class='no-items'>
      {{icon this.icon}}
      {{#if query}}
        {{t (concat name '.notFound') query=query}}
      {{else}}
        {{t (concat name '.none')}}
      {{/if}}
    </div>
  {{/animated-if}}
{{/animated-container}}
{{#if hasMore}}
  <div class='container'>
    {{#submit-button onsubmit=(action 'loadMore' rows.length)}}
      {{t (concat name '.more')}}
    {{/submit-button}}
  </div>
{{/if}}
