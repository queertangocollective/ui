{{search-field inputId=inputId query=(get value key) onquery=(action 'query') hasIcon=false onchange=(action (mut query))}}

{{#pop-over for=inputId ondidinsert=(action (mut popover)) flow='dropdown'}}
  <ul>
    {{#each options as |option|}}
      <li onclick={{action 'change' option}}>{{highlight (get option key) match=query}}</li>
    {{/each}}
  </ul>
{{/pop-over}}

{{#liquid-if (and query (not (get value key)))}}
  {{yield}}
{{/liquid-if}}
