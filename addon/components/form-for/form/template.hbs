{{#with (await (get model fieldName)) as |value|}}
  {{#if (is-array value)}}
    {{#each (filter-by 'isDeleted' false value) as |item idx|}}
      {{#form-for item index=idx tagName='div' multiple=true class=class
        onsubmit=onsubmit
        oninit=(action 'registerWith' parent) as |f|}}
        {{yield f idx}}
      {{/form-for}}
    {{else}}
      {{yield to="inverse"}}
    {{/each}}
  {{else}}
    {{#form-for value tagName='div' class=class
      onsubmit=onsubmit
      oninit=(action 'registerWith' parent) as |f|}}
      {{yield f}}
    {{/form-for}}
  {{/if}}
{{/with}}
