{{#form-for payload onsubmit=(action submit) as |f|}}
  <figure>
    <img src="{{payload.url}}" alt="{{payload.title}}" class="size-{{f.changeset.size}}"/>
    {{#f.buttons 'inset' as |b|}}
      {{#b.option 'left'}}{{icon 'inset-left'}} Left{{/b.option}}
      {{#b.option 'none'}}{{icon 'inset-none'}} None{{/b.option}}
      {{#b.option 'right'}}{{icon 'inset-right'}} Right{{/b.option}}
    {{/f.buttons}}
    {{#f.buttons 'size' as |b|}}
      {{#b.option 'small'}}{{icon 'small'}} Small{{/b.option}}
      {{#b.option 'large'}}{{icon 'large'}} Large{{/b.option}}
      {{#b.option 'full-bleed'}}{{icon 'full-bleed'}} Full Bleed{{/b.option}}
    {{/f.buttons}}
  </figure>
  <figcaption>
    {{f.text 'caption'}}
  </figcaption>
  {{f.submit 'Save'}}
{{/form-for}}
