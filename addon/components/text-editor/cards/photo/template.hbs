<figure onclick={{action editCard}}>
  {{#animated-beacon group=(concat "photo-" payload.photoId)}}
    <img src="{{payload.url}}" alt="{{payload.title}}" class="size-{{payload.size}}"/>
  {{/animated-beacon}}
  {{#unless (equals payload.inset 'none')}}
    <button disabled=true class='icon' type='submit'>
      {{icon (concat 'align-' payload.inset)}}
    </button>
  {{/unless}}
</figure>
<figcaption>
  {{payload.caption}}
</figcaption>
